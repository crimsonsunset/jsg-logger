{
  "projectName": "Advanced JSG Logger Demo",
  "globalLevel": "info",
  "timestampMode": "absolute",
  "format": {
    "style": "brackets",
    "componentCase": "upper",
    "timestamp": "HH:mm:ss.SSS"
  },
  "display": {
    "timestamp": true,
    "emoji": true,
    "component": true,
    "level": true,
    "message": true,
    "jsonPayload": true,
    "stackTrace": true
  },
  "components": {
    "core": { 
      "emoji": "🎯", 
      "color": "#4A90E2", 
      "name": "JSG-CORE",
      "level": "debug"
    },
    "api": { 
      "emoji": "🔌", 
      "color": "#FF5500", 
      "name": "API",
      "level": "trace"
    },
    "database": { 
      "emoji": "💾", 
      "color": "#FF0000", 
      "name": "Database",
      "level": "info"
    },
    "auth": { 
      "emoji": "🔐", 
      "color": "#00C896", 
      "name": "Auth",
      "level": "debug"
    },
    "utils": { 
      "emoji": "🛠️", 
      "color": "#9B59B6", 
      "name": "Utils",
      "level": "warn"
    },
    "ui": { 
      "emoji": "🎨", 
      "color": "#FF6B6B", 
      "name": "UI",
      "level": "info"
    },
    "service": { 
      "emoji": "⚙️", 
      "color": "#4ECDC4", 
      "name": "Service",
      "level": "error"
    },
    "test": { 
      "emoji": "🧪", 
      "color": "#FFEAA7", 
      "name": "Test",
      "level": "debug"
    }
  },
  "environments": {
    "development": {
      "globalLevel": "debug",
      "display": {
        "level": true,
        "timestamp": true,
        "stackTrace": true
      },
      "components": {
        "api": "trace",
        "database": "debug",
        "auth": "trace"
      }
    },
    "test": {
      "globalLevel": "warn",
      "display": {
        "emoji": false,
        "timestamp": false
      },
      "components": {
        "test": "trace",
        "api": "debug"
      }
    },
    "production": {
      "globalLevel": "error",
      "display": {
        "emoji": false,
        "component": false,
        "stackTrace": false
      },
      "components": {
        "core": "warn",
        "auth": "info",
        "api": "warn"
      }
    }
  },
  "fileOverrides": {
    "src/api/auth.js": { 
      "level": "trace",
      "component": "auth",
      "description": "Debug auth endpoints",
      "display": {
        "jsonPayload": true,
        "stackTrace": true
      }
    },
    "src/database/*.js": {
      "level": "debug",
      "component": "database", 
      "description": "Database operations debugging"
    },
    "src/ui/components/**": {
      "level": "info",
      "component": "ui",
      "description": "UI component lifecycle",
      "display": {
        "jsonPayload": false,
        "stackTrace": false
      }
    },
    "src/core.js": {
      "level": "debug",
      "emoji": "🎯",
      "display": {
        "level": true,
        "jsonPayload": true
      }
    }
  }
}